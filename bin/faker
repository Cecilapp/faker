#!/usr/bin/env php
<?php
error_reporting(E_ALL ^ E_NOTICE);
date_default_timezone_set('UTC');

require_once 'vendor/autoload.php';

const CONTENT_DIR = './pages/';
$dir = CONTENT_DIR;
$number = 0;
$section = '';
$clear = false;

$options = getopt('help::', ['number::', 'section::', 'clear::']);

if (!isset($argv[1]) || $argv[1] == 'help') {
    echo <<<EOT
Create fake pages for Cecil (https://cecil.app).

Options:
`--number`: number of pages (optional, "10" by default).
`--section`: section where to create pages (optional).
`--locale`: language locale ("fr_FR" by default).
`--clear`: remove directory before pages creation (false by default).
EOT;
    exit(0);
}

if (isset($options['number'])) {
    $number = (int)$options['number'];
}
if (isset($options['section'])) {
    $section = (string)$options['section'];
}
if (isset($options['clear']) && $options['clear'] === false) {
    $clear = true;
}

if (is_string($section)) {
    $dir .= $section;
}
if ($clear && is_dir($dir)) {
    printf("Removing `%s` directory...\n", $dir);
    exec('rm -rf '.$dir);
}
if ($number === 0) {
    exit(0);
}
if (@mkdir($dir, 0777, true)) {
    printf("Creating `%s` directory...\n", $dir);
}

$faker = Faker\Factory::create();

printf("Creating `%s` pages", $number);
$tagsArray = $faker->words(10);
for ($i=0; $i < $number; $i++) {
    $title = $faker->words(4, true);
    $date = $faker->date();
    $tagsRandom = $faker->randomElements($tagsArray, $faker->numberBetween(1, 3));
    $tags = '['.implode(', ', $tagsRandom).']';
    $content = $faker->paragraphs(4, true);

    $data = '---'."\n"
        .'title: '.$title."\n"
        .'date: '.$date."\n"
        .'tags: '.$tags."\n"
        .'---'."\n"
        .$content."\n";

    file_put_contents(sprintf("%s/%s.md" , $dir, $title), $data);
    echo '.';
}

// time
printf("\nTime: %s seconds\n", round(microtime(true) - $_SERVER["REQUEST_TIME_FLOAT"], 2));
exit(0);
